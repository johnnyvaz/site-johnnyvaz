---
import { SiteMetadata } from '../config'
---

<div class='bg-gray-50 dark:bg-black'>
  <div
    class='mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:flex lg:items-center lg:justify-between lg:px-8 lg:py-16'
  >
    <h2 class='text-3xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl'>
      <span class='block dark:text-white'>Ready to get in touch?</span>
      <span class='block text-sky-600 dark:text-sky-300'
        >Fill out the form below to contact us.
      </span>
    </h2>
    <div class='mt-8 flex lg:mt-0 lg:flex-shrink-0'>
      <div class='inline-flex rounded-md shadow'>
        <form
          name="contact"
          method="POST"
          data-netlify="true"
          class="bg-white p-6 rounded-lg shadow-lg"
        >
          <input type="hidden" name="form-name" value="contact" />
          <div class="mb-4">
            <label class="block text-gray-700">Your Name:</label>
            <input
              type="text"
              name="name"
              class="w-full px-3 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-sky-600"
              required
            />
          </div>
          <div class="mb-4">
            <label class="block text-gray-700">Your Email:</label>
            <input
              type="email"
              name="email"
              class="w-full px-3 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-sky-600"
              required
            />
          </div>
          <div class="mb-4">
            <label class="block text-gray-700">Your Phone:</label>
            <input
              type="tel"
              name="phone"
              class="w-full px-3 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-sky-600"
              required
            />
          </div>
          <div class="mb-4">
            <label class="block text-gray-700">Message:</label>
            <textarea
              name="message"
              class="w-full px-3 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-sky-600"
              rows="4"
              required
            ></textarea>
          </div>
          <div>
            <button
              type="submit"
              class="px-4 py-2 bg-sky-600 text-white rounded-md hover:bg-pink-600"
            >
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
